<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="workbench" class="org.jacp.javafx2.rcp.workbench.DemoFX2Workbench">
		<property name="perspectives">
			<list>
				<ref bean="perspectiveTwo" />
				<ref bean="perspectiveOne" />



			</list>
		</property>
	</bean>

	<bean id="perspectiveOne" class="org.jacp.javafx2.rcp.perspectives.DemoFX2PerspectiveOne">
		<property name="name" value="perspectiveOne" />
		<property name="id" value="id01" />
		<property name="active" value="true" />
		<property name="subcomponents">
			<list>
				<ref bean="demoFX2ComponentOne" />
				<ref bean="demoFX2ComponentTwo" />
				<ref bean="demoBGStatefulComponentOne" />
				<ref bean="demoBGStatelessComponentOne" />
			</list>
		</property>
	</bean>

	<bean id="perspectiveTwo" class="org.jacp.javafx2.rcp.perspectives.DemoFX2PerspectiveTwo">
		<property name="name" value="perspectiveTwo" />
		<property name="id" value="id02" />
		<property name="active" value="true" />
		<property name="subcomponents">
			<list>
			</list>
		</property>
	</bean>
	<bean id="demoFX2ComponentOne" class="org.jacp.javafx2.rcp.components.DemoFX2ComponentOne">
		<property name="name" value="demoFX2ComponentOne" />
		<property name="active" value="true" />
		<property name="id" value="id001" />
		<property name="executionTarget" value="P0" />
	</bean>
	<bean id="demoFX2ComponentTwo" class="org.jacp.javafx2.rcp.components.DemoFX2ComponentTwo">
		<property name="name" value="demoFX2ComponentTwo" />
		<property name="active" value="false" />
		<property name="id" value="id002" />
		<property name="executionTarget" value="P1" />
	</bean>
	<bean id="demoBGStatefulComponentOne" class="org.jacp.javafx2.rcp.components.DemoBGStatefulComponentOne">
		<property name="name" value="demoBGStatefulComponentOne" />
		<property name="active" value="true" />
		<property name="id" value="id003" />
	</bean>
	<bean id="demoBGStatelessComponentOne" class="org.jacp.javafx2.rcp.components.DemoBGStatelessComponentOne" scope="prototype">
		<property name="name" value="demoBGStatelessComponentOne" />
		<property name="active" value="true" />
		<property name="id" value="id004" />
	</bean>
</beans>